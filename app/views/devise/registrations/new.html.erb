<h2>Sign up as <%= @role.capitalize %> - Step <%= @step %> of <%= @total_steps %></h2>

<%= render "devise/registrations/steps/step_#{@step}", locals: { resource: @user, resource_name: resource_name, role: @role } %>

<div class="form-actions">
  <% if @step > 1 %>
    <%= link_to "Previous", new_registration_path(resource_name, role: @role, step: @step - 1), class: 'button secondary' %>
  <% end %>

  <% if @step < @total_steps %>
    <%= button_tag "Next", class: 'button primary' %>
  <% else %>
    <%= button_tag "Submit Registration", class: 'button primary' %>
  <% end %>
</div>

<p>Step <%= @step %> of <%= @total_steps %></p>
