<%= form_for(resource, as: resource_name, url: registration_path(resource_name, step: @step)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.fields_for :jobseeker_profile_attributes, resource.jobseeker_profile || resource.build_jobseeker_profile do |profile_fields| %>
    <div class="field">
      <%= profile_fields.label :phone_number %><br />
      <%= profile_fields.text_field :phone_number %>
    </div>

    <div class="field">
      <%= profile_fields.label :date_of_birth %><br />
      <%= profile_fields.date_field :date_of_birth %>
    </div>

    <div class="field">
      <%= profile_fields.label :city %><br />
      <%= profile_fields.text_field :city %>
    </div>

    <div class="field">
      <%= profile_fields.label :country %><br />
      <%= profile_fields.text_field :country %>
    </div>
  <% end %>

  <%= f.hidden_field :step, value: @step %>
<% end %>
