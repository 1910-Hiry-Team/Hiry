<%= form_for(resource, as: resource_name, url: registration_path(resource_name, step: @step)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.fields_for :jobseeker_profile_attributes, resource.jobseeker_profile || resource.build_jobseeker_profile do |profile_fields| %>
    <div class="field">
      <%= profile_fields.label :first_name %><br />
      <%= profile_fields.text_field :first_name %>
    </div>

    <div class="field">
      <%= profile_fields.label :last_name %><br />
      <%= profile_fields.text_field :last_name %>
    </div>
  <% end %>

  <%= f.hidden_field :step, value: @step %>
<% end %>
