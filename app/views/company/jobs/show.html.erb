<div class="link-back"><i class="fas fa-angle-left"></i><strong><%= link_to "Back to dashboard", company_dashboard_path %></strong></div>
<div class="container my-5">
  <div class="card shadow-lg p-4">
    <div class="card-body">
      <h1 class="card-title text-center mb-4"><%= @job.job_title.capitalize %></h1>

      <% if @job.photo.attached? %>
        <div class="row">
          <% image_tag @job.photo, alt:'job image'%>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <p><strong>📍 Location:</strong> <%= @job.location %></p>
          <p><strong>📝 Contract Type:</strong> <%= @job.contract %></p>
        </div>
        <div class="col-md-6">
          <p><strong>🗣 Preferred Language:</strong> <%= @job.language %></p>
          <p><strong>📊 Experience Level:</strong> <%= @job.experience %></p>
          <p><strong>💰 Salary:</strong> <%= @job.salary %></p>
        </div>
        <div class='col-md-12'>
          <p><strong>🎯 Missions:</strong> <%= @job.missions %></p>
        </div>
      </div>

      <p class="text-muted mt-3"><strong>📅 Posted on:</strong> <%= @job.created_at.strftime("%B %d, %Y") %></p>
    </div>
  </div>


  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to "✏️ Edit Job", edit_company_job_path(@job.company, @job), class: "btn btn-outline-primary" %>
    <%= button_to "🗑 Delete Job", company_job_path(@job.company, @job), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "➕ Create a New Job", new_company_job_path(@company), class: "btn btn-success me-2" %>
    <%= link_to "⬅️ Back to Job Listings", company_jobs_path(@job.company), class: "btn btn-secondary" %>
  </div>

  <div class="container">
    <h3>Applications</h3>
      <% @job.users.uniq.each do |user| %>
        <p>
          <% if user.jobseeker_profile.present? %>
            <h2><%= user.jobseeker_profile.first_name %>
            <%= user.jobseeker_profile.last_name %><h2>

            <% application = @job.applications.find_by(user_id: user.id) %>
            <%= link_to "View Application",
              job_application_path(@job, application),
              class: "btn btn-primary" %>
          <% end %>
        </p>
      <% end %>
  </div>
</div>
