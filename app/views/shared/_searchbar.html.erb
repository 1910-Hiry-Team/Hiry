<div class="container">
    <%= form_with(url: search_jobs_path, method: :get, local: true) do |f| %>
        <div>
            <label for="job_title">Job Title</label>
            <%= f.text_field :job_title, placeholder: "Enter Job Title" %>
        </div>
        <div>
            <label for="location">Location</label>
            <%= f.text_field :location, placeholder: "Enter Location",
            input_html: {data: {address_autocomplete_target: "address"}},
            wrapper_html: {data: {controller: "address-autocomplete",
            address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
            %>
        </div>
    <% end %>
