<turbo-frame id="wizard-frame">
  <h2>Your Location</h2>

  <%= simple_form_for @user, url: wizard_path, method: :put, data: { turbo_stream: true } do |f| %>
     <%= f.fields_for :jobseeker_profile do |location_form| %>
     <%= location_form.input :location %>
       <%= location_form.input :city %>
       <%= location_form.input :country, as: :select, collection: ISO3166::Country.translations.values %>
     <% end %>
     <%= f.submit "Next" %>
  <% end %>
</trubo-frame>
