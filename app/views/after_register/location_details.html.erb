<trubo-frame id="wizard-frame">
  <h2>Your Location</h2>

  <%= simple_form_for @user, url: wizard_path, method: :put, data: { turbo_stream: true } do |f| %>
     <%= f.fields_for :jobseeker_profile_attributes do |profile_form| %>
     <%= profile_form.input :location %>
       <%= profile_form.input :city %>
       <%= profile_form.input :country, collection: Carmen.country_names %> <%# Utilisation de Carmen pour les pays %>
     <% end %>
     <%= f.submit "Next" %>
  <% end %>
</trubo-frame>
